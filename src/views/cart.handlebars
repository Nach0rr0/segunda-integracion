<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Carrito</title>
    <link rel="stylesheet" type="text/css" href="/src/public/css/cart.css">
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 20px;
        }

        h1 {
            color: #333;
        }

        ul {
            list-style: none;
            padding: 0;
        }

        li {
            margin-bottom: 10px;
        }

        a {
            text-decoration: none;
            color: #007bff;
            margin-right: 10px;
        }
    </style>
</head>
<body>
    <h1>Cart View</h1>
    
    {{#if carts.length}}
        <ul>
            {{#each carts}}
                <li>
                    <p>Cart ID: {{this._id}}</p>
                    <p>Products:</p>
                    <ul>
                        {{#each this.products}}
                            <li>{{this.product}} - Quantity: {{this.quantity}}</li>
                        {{/each}}
                    </ul>
                </li>
            {{/each}}
        </ul>
    {{else}}
        <p>No carts available.</p>
    {{/if}}

    <!-- PaginaciÃ³n -->
    {{#if pagination.prev}}
        <a href="?page={{pagination.prev}}">Anterior</a>
    {{/if}}
    
    Page {{pagination.current}} of {{pagination.total}}
    
    {{#if pagination.next}}
        <a href="?page={{pagination.next}}">Siguiente</a>
    {{/if}}

<script src="/js/cart.js"></script>

</body>
</html>
